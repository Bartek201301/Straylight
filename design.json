{
  "designSystem": {
    "name": "Modern Magazine Layout System",
    "version": "1.0",
    "description": "A clean, editorial-focused design system for magazine-style content layouts"
  },
  "typography": {
    "hierarchy": {
      "masthead": {
        "weight": "black",
        "size": "xxl",
        "letterSpacing": "tight",
        "transform": "uppercase",
        "color": "primary"
      },
      "headlines": {
        "weight": "bold",
        "size": "lg",
        "lineHeight": "tight",
        "color": "primary"
      },
      "body": {
        "weight": "normal",
        "size": "sm",
        "lineHeight": "relaxed",
        "color": "secondary"
      },
      "meta": {
        "weight": "medium",
        "size": "xs",
        "transform": "uppercase",
        "letterSpacing": "wide",
        "color": "tertiary"
      }
    },
    "fontFamily": {
      "primary": "sans-serif",
      "fallback": "system-ui, -apple-system, sans-serif"
    }
  },
  "colorPalette": {
    "primary": "#000000",
    "secondary": "#4a4a4a",
    "tertiary": "#888888",
    "background": "#ffffff",
    "accent": "#f5f5f5",
    "border": "#e0e0e0"
  },
  "layout": {
    "structure": {
      "type": "grid",
      "columns": 3,
      "gap": "large",
      "responsive": true
    },
    "header": {
      "position": "top",
      "alignment": "center",
      "padding": "large",
      "borderBottom": "thin"
    },
    "navigation": {
      "position": "below-header",
      "style": "pills",
      "alignment": "left",
      "spacing": "medium"
    },
    "contentGrid": {
      "cardLayout": true,
      "aspectRatio": "4:3",
      "uniformHeight": true,
      "rows": "auto"
    }
  },
  "components": {
    "card": {
      "structure": {
        "imagePosition": "top",
        "imageRatio": "4:3",
        "padding": "medium",
        "border": "subtle",
        "borderRadius": "small",
        "background": "white"
      },
      "content": {
        "title": {
          "maxLines": 2,
          "position": "below-image",
          "marginBottom": "small"
        },
        "excerpt": {
          "maxLines": 3,
          "position": "below-title",
          "marginBottom": "medium"
        },
        "metadata": {
          "position": "bottom",
          "layout": "horizontal",
          "items": ["author", "category", "readTime"],
          "separator": "bullet"
        }
      }
    },
    "pill": {
      "style": "outlined",
      "padding": "small",
      "borderRadius": "full",
      "fontSize": "xs",
      "fontWeight": "medium",
      "states": {
        "default": {
          "background": "transparent",
          "border": "thin",
          "color": "tertiary"
        },
        "active": {
          "background": "primary",
          "border": "primary",
          "color": "white"
        }
      }
    },
    "button": {
      "primary": {
        "background": "primary",
        "color": "white",
        "border": "none",
        "padding": "small-medium",
        "borderRadius": "small",
        "fontSize": "xs",
        "fontWeight": "medium",
        "textTransform": "uppercase"
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "xxl": "3rem"
    },
    "sections": {
      "header": "xl",
      "navigation": "md",
      "cardGrid": "lg",
      "cardInternal": "md"
    }
  },
  "imageStyle": {
    "treatment": "grayscale",
    "aspectRatio": "4:3",
    "objectFit": "cover",
    "borderRadius": "small"
  },
  "designPrinciples": {
    "aesthetic": "minimal",
    "emphasis": "content-first",
    "whitespace": "generous",
    "contrast": "high",
    "readability": "optimized"
  },
  "responsive": {
    "breakpoints": {
      "mobile": "768px",
      "tablet": "1024px",
      "desktop": "1200px"
    },
    "gridBehavior": {
      "mobile": "1-column",
      "tablet": "2-columns",
      "desktop": "3-columns"
    }
  },
  "interactions": {
    "hover": {
      "cards": "subtle-lift",
      "buttons": "background-darken",
      "pills": "border-strengthen"
    },
    "focus": {
      "outline": "visible",
      "color": "primary"
    }
  },
  "accessibility": {
    "contrast": "WCAG-AA",
    "focusVisible": true,
    "semanticMarkup": true,
    "screenReaderOptimized": true
  }
}